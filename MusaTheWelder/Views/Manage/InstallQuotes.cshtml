@model IEnumerable<MusaTheWelder.Models.SaleQuote>
@using MusaTheWelder.Models

@{
    ViewBag.Title = "Install Quotes";
}

<style>
    * {
        box-sizing: border-box;
    }

    body {
        margin: 0;
    }

    .row:after {
        content: "";
        display: table;
        clear: both
    }

    .column-66 {
        float: left;
        width: 66.66666%;
        padding: 20px;
    }

    .column-33 {
        float: left;
        width: 33.33333%;
        padding: 20px;
    }

    .large-font {
        font-size: 48px;
    }

    .button {
        border: none;
        color: white;
        padding: 14px 28px;
        font-size: 16px;
        cursor: pointer;
        background-color: #04AA6D;
    }

    .xlarge-font {
        font-size: 64px
    }
</style>

<h2 class="text-center text-success">Installation Menu</h2>

<h4 class="text-center">All Quote/Installation History</h4>
<hr />

@foreach (var item in Model)
{
    <!-- Clarity Section -->
    <div class="container" style="background-color:#f1f1f1">
        <div class="row">
            <div class="column-66">
                <h1 class="large-font"><b>Quote #@item.SaleQuoteId</b></h1>
                <h2 class="large-font"><b>Invoice #@item.SaleId</b></h2>
                <h1 class="medium-font" style="color:green;"><b>Purchased On: @item.Sale.SaleDate.AsDateTime().ToString("dddd, dd MMMM yyyy")</b></h1>
                <p><span style="font-size:24px">Status: @item.Status</span> </p>
                <br />
                <a href="@Url.Action(actionName: "Details", controllerName: "SaleQuotes", routeValues: new { id = item.SaleQuoteId })" class="button"><i class="fa fa-shopping-cart"></i>More Details</a>
            </div>
        </div>
    </div>
    <br />
}