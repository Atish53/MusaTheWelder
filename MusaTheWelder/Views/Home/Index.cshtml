@model IEnumerable<MusaTheWelder.Models.Product>

@{
    ViewBag.Title = "Musa's Welding Store";
}

<style>
    /* Remove the navbar's default rounded borders and increase the bottom margin */
    .navbar {
        margin-bottom: 50px;
        border-radius: 0;
    }

    /* Remove the jumbotron's default bottom margin */
    .jumbotron {
    }

    /* Add a gray background color and some padding to the footer */
    footer {
        background-color: #f2f2f2;
        padding: 25px;
    }

    .carousel-inner img {
        margin: auto;
    }

    .item img {
        width: 100%;
        height: initial;
    }
</style>

<br />

<div class="jumbotron">
    <div class="container text-center">
        <h1>Musa's Welding Store</h1>        
    </div>
</div>


<div class="container">
    <div class="row">
        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                <div class="item active">
                    <img src="~/Images/W1.jpeg" alt="Image">
                    <div class="carousel-caption">
                        <h3>Welcome to Musa's Welding Store!</h3>
                        <p>Buy an item and checkout, installation is entirely optional!</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Images/W2.jpeg" alt="Image">
                    <div class="carousel-caption">
                        <h3>We offer a range of different products!</h3>
                        <p>Click on an item to view it in detail.</p>
                    </div>
                </div>

                <div class="item">
                    <img src="~/Images/W3.jpeg" alt="Image">
                    <div class="carousel-caption">
                        <h3>Our store offers you windows, doors and gates!</h3>
                        <p>Just select your desired item to get started.</p>
                    </div>
                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>
</div>

<div class="container">
    <br />
    <h3 class="text-nowrap">Windows</h3>

    <hr>
    <div class="row">
        @foreach (var item in Model.Where(x => x.ProductCategoryId == 1))
        {
            <div>
                <div class="col-md-4" style="border: 2px solid; border-radius: 6px; border-color:cadetblue; padding-top: 6px">
                    <p class="text-center" style="border: 2px solid; border-radius: 5px; border-color: cadetblue; color: white; background-color:cadetblue">@item.ProductName</p>
                    <a href="#" data-toggle="modal" data-target="#@item.ProductId">
                        <img src="data:image;base64,@System.Convert.ToBase64String(item.ProductImage)" class="img-responsive img-rounded" style="width: 350px; height: 350px; background-size: contain; padding-bottom: 5px" />
                    </a>
                    <p class="text-center" style="border: 2px solid; border-radius: 5px; border-color: darkseagreen; color: black; background-color:beige; font-family: Arial; font-size:large;">Price: R @item.ProductPrice</p>
                </div>

                <!-- Modal -->
                <div class="modal fade" id="@item.ProductId" role="dialog">
                    <div class="modal-dialog">

                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title text-center" style="font: lighter 20px arial;">@item.ProductName</h4>
                            </div>
                            <div class="modal-body">
                                <img src="data:image;base64,@System.Convert.ToBase64String(item.ProductImage)" width="100%" height="100%" />
                                <br />
                                <br />
                                <h4 class="modal-title text-center">Price: &#82;@item.ProductPrice</h4>     
                                <h4 class="modal-title text-center">Stock Available: @item.ProductStock</h4>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-danger" onclick="location.href='@Url.Action("Details", "Products", new { id = item.ProductId })'">View Product</button>
                                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>


        }
    </div>
</div>

